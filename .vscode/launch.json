{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            // Archivo con la gramatica
            "grammar": "${file}",
            // Archivo a parsear
            "input": "src/llaves.txt",
            // Simbolo inicial
            "startRule": "programa",
            // Muestra Arbol Sintactico
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "Compiladores2021.App",
            "projectName": "Compiladores2021"
        }
    ]
}